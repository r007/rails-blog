<% title "Sign up" %>

<!-- Post Content -->
<article>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <h2>Sign up</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <p class="help-block">
              Fields marked with a <span class="required">*</span> are required.
            </p>

            <div class="form-group input-required" id="form-section-username">
              <%= f.label :username %>

              <div class="input-group">
                <div class="input-group-addon"><i class="fa fa-user"></i></div>
                <%= f.text_field :username, class: "form-control" %>
                <span></span>
              </div>
            </div>
            <!-- #form-section-username .form-section -->

            <div class="form-group input-required" id="form-section-email">
              <%= f.label :email %>

              <div class="input-group">
                <div class="input-group-addon"><i class="fa fa-envelope"></i></div>
                <%= f.email_field :email, class: "form-control", autofocus: true %>
                <span></span>
              </div>
            </div>
            <!-- #form-section-email .form-section -->

            <div class="form-group input-required" id="form-section-password">
              <%= f.label :password %>
              <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>

              <div class="input-group">
                <div class="input-group-addon"><i class="fa fa-lock"></i></div>
                <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
                <span></span>
              </div>
            </div>
            <!-- #form-section-password .form-section -->

            <div class="form-group input-required" id="form-section-password-confirmation">
              <%= f.label :password_confirmation %>

              <div class="input-group">
                <div class="input-group-addon"><i class="fa fa-lock"></i></div>
                <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off" %>
                <span></span>
              </div>
            </div>
            <!-- #form-section-password-confirmation .form-section -->

            <p class="form-submit">
              <%= f.submit 'Sign up', class: "btn btn-primary btn-embossed" %>
            </p>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</article>
