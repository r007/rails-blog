<% title "Log in" %>

<!-- Main Content -->
<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 col-sm-6">
      <h3 class="comment-title">Login</h3>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="tile tile-login">
        <div class="input-icon">
          <span class="fa-user fa"></span>
          <%= f.text_field :login, autofocus: true, class: "form-control", placeholder: "Your email or username" %>
        </div>
        <div class="input-icon">
          <span class="fa-lock fa"></span>
          <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password" %>
        </div>

        <%= f.submit "Log in", class: "btn btn-block btn-primary btn-embossed" %>

        <% if devise_mapping.rememberable? -%>
            <div class="login-action clearfix">
              <div class="col-md-8 col-xs-9">
                <label class="checkbox" for="checkbox1">
                  <span class="icons">
                    <span class="first-icon"></span>
                    <span class="second-icon fa fa-check"></span>
                  </span>
                  <%= f.check_box :remember_me %> Remember me
                </label>
              </div>
            </div>
        <% end -%>
      </div>
      <% end %>

      <br />

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
